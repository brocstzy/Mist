<UserControl x:Class="Mist.UserControls.LibraryGameUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mist.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="24" d:DesignWidth="295"
             Width="285">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Image x:Name="icon_Image"
               Margin="5,0,0,0"
               Height="22"
               Width="22"
               VerticalAlignment="Center"/>
        <TextBlock x:Name="gameName_TextBlock"
                   VerticalAlignment="Center"
                   Grid.Column="1"
                   Margin="5,0,0,0"
                   FontFamily="{StaticResource font_medium}"
                   Foreground="White"
                   FontSize="14"/>
    </Grid>
</UserControl>

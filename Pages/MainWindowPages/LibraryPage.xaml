                                CornerRadius="3" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" SnapsToDevicePixels="true">
                            <ContentPresenter x:Name="contentPresenter" Focusable="False" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsDefaulted" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Background" TargetName="border">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0.5,0"
                                                             EndPoint="0.5,1"
                                                             Opacity="10">
                                            <GradientStop Color="#66c0f4" Offset="0"/>
                                            <GradientStop Color="#2f89bc" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="true">
                                
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Background" TargetName="border" Value="{StaticResource Button.Disabled.Background5}"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource Button.Disabled.Border5}"/>
                                <Setter Property="TextElement.Foreground" TargetName="contentPresenter" Value="{StaticResource Button.Disabled.Foreground5}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0"
              Background="#30343b"
              >
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <Border CornerRadius="5"
                    Background="#25272c"
                    Margin="5,5,10,5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Image Source="/Assets/search-icon.png"
                           Width="27"
                           Margin="5,5,10,5" />
                    <TextBox Name="search_TextBox"
                             Grid.Column="1"
                             Background="Transparent"
                             BorderThickness="0"
                             MaxLength="25"
                             VerticalContentAlignment="Center"
                             Foreground="White"
                             FontSize="17"
                             Padding="0,0,0,1"
                             FontFamily="{StaticResource font_light}" />
                </Grid>
            </Border>
            <ListBox ItemContainerStyle="{DynamicResource ListBoxItemContainerStyle1}" x:Name="games_ListBox"
                     Grid.Row="1"
                     Background="#24282f"
                     BorderThickness="0"
                     Padding="0,5,0,0"
                     SelectionChanged="games_ListBox_SelectionChanged" />
            <Rectangle Width="1"
                       Stroke="Black"
                       Grid.RowSpan="2"
                       HorizontalAlignment="Right"/>
        </Grid>
        <StackPanel x:Name="noGames_StackPanel"
                    Orientation="Vertical"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Visibility="Collapsed">
            <TextBlock Text="В вашей библиотеке пока нет игр"
                       FontSize="18"
                       Foreground="White"
                       Margin="0,0,0,5"/>
            <TextBlock Text="Перейти в магазин"
                       HorizontalAlignment="Center"
                       FontSize="16"
                       Foreground="DeepSkyBlue"
                       TextDecorations="Underline"
                       PreviewMouseLeftButtonDown="TextBlock_PreviewMouseLeftButtonDown"
                       >
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.Setters>
                                    <Setter Property="Cursor" Value="Hand"/>
                                </Trigger.Setters>
                            </Trigger>
                            <EventTrigger RoutedEvent="MouseLeftButtonDown">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation To="Red" Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)" Duration="0:0:0.01"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseLeftButtonUp">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation To="DeepSkyBlue" Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)" Duration="0:0:0.01" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation To="DeepSkyBlue" Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)" Duration="0:0:0.01" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Style.Triggers>

                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </StackPanel>
        <Grid x:Name="noGames_Stackpanel1"
              Grid.Column="1"
              Visibility="Collapsed">
            <Grid.Background>
                <RadialGradientBrush
                    GradientOrigin="0.5,0.5"
                    Center="0.5,0.5"
                    RadiusX="0.5"
                    RadiusY="1">
                    <RadialGradientBrush.GradientStops>
                        <GradientStop Color="#3c4a61" Offset="0"/>
                        <GradientStop Color="#24282f" Offset="1"/>
                    </RadialGradientBrush.GradientStops>
                </RadialGradientBrush>
            </Grid.Background>
            <StackPanel Orientation="Vertical"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">

                <Image Source="/Assets/gamepad.png"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Width="100"
                   Margin="0,0,0,20"/>
                <TextBlock Text="Здесь будут отображаться ваши игры"
                       FontSize="24"
                       Foreground="#959595"
                       />
            </StackPanel>
        </Grid>

        <ScrollViewer x:Name="tiles_ScrollViewer"
                      Grid.Column="1"
                      VerticalScrollBarVisibility="Auto"
                      Background="#24282f">
            <WrapPanel x:Name="tiles_WrapPanel"
                       Margin="30"
                       
                       />
        </ScrollViewer>
        <ScrollViewer Grid.Column="1"
                      VerticalScrollBarVisibility="Auto"
                      x:Name="gamePage_ScrollViewer">
            <Grid x:Name="gamePage_Grid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"
                                   MinHeight="200"
                                   MaxHeight="330"/>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid x:Name="images_Grid">
                    <Image x:Name="background_Image"
                           Stretch="UniformToFill"
                           StretchDirection="Both"
                           HorizontalAlignment="Center"
                           
                           />
                    <Image x:Name="logo_Image"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Margin="50,75,0,0"
                           Width="300"/>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.Background>
                        <VisualBrush>
                            <VisualBrush.Visual>
                                <Grid ClipToBounds="True"
                                      >
                                    <Grid.RenderTransform>
                                        <ScaleTransform ScaleY="-1" CenterX="0.5" CenterY="0.5"/>
                                    </Grid.RenderTransform>
                                    <Image x:Name="backgroundBlur_Image"
                                            Stretch="Uniform"
                                           Margin="-50"
                                            >
                                        <Image.Effect>
                                            <BlurEffect Radius="200"/>
                                        </Image.Effect>
                                    </Image>
                                </Grid>
                            </VisualBrush.Visual>
                        </VisualBrush>
                    </Grid.Background>
                </Grid>
                <Grid
                    Grid.Row="1">
                    <Grid.Background>
                        <SolidColorBrush Color="Black">
                            <SolidColorBrush.Opacity>0.6</SolidColorBrush.Opacity>
                        </SolidColorBrush>
                    </Grid.Background>
                </Grid>
                <StackPanel Orientation="Vertical"
                            Grid.Row="1"
                            Margin="15,10"
                    >
                    <Grid>
                        <Grid.Resources>
                            <Style TargetType="Label">
                                <Setter Property="FontFamily" Value="{StaticResource font_light}"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Foreground" Value="#cbccc0"/>
                                <Setter Property="FontSize" Value="16"/>
                            </Style>
                        </Grid.Resources>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        <Button Style="{DynamicResource ButtonStyle1}" x:Name="play_Button"
                                MaxHeight="50"
                                MaxWidth="190"
                                Width="190"
                                MinHeight="30"
                                BorderThickness="0"
                                HorizontalAlignment="Left"
                                >
                            <Button.Background>
                                <LinearGradientBrush>
                                    <GradientStop Color="#36d141" Offset="0"/>
                                    <GradientStop Color="#2cab34" Offset="1"/>
                                </LinearGradientBrush>
                            </Button.Background>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Assets/play-game.png"
                                       Height="22"
                                       Margin="0,0,5,0"/>
                                <TextBlock Text="ИГРАТЬ"
                                           Foreground="White"
                                           FontFamily="{StaticResource font_regular}"
                                           FontSize="18"/>
                            </StackPanel>
                        </Button>
                        <StackPanel Orientation="Vertical"
                                    Grid.Column="1"
                                    Margin="30,0,0,0">
                            <Label Content="ПОСЛЕДНИЙ ЗАПУСК"
                                   FontFamily="{StaticResource font_regular}"
                                   Margin="0,3,0,0"
                                   Opacity="0.7"/>
                            <Label x:Name="lastPlayedAt_Label"
                                   Content="Никогда"
                                   Margin="0,0,0,3"
                                   Opacity="0.7"/>
                        </StackPanel>
                        <Grid Grid.Column="2"
                              Margin="35,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>
                            <Image Source="/Assets/timer.png" 
                                   Margin="0,0,5,0"/>
                            <StackPanel Orientation="Vertical"
                                        Grid.Column="1">
                                <Label Content="ВСЕГО НАИГРАНО"
                                       FontFamily="{StaticResource font_regular}"
                                       Opacity="0.7"
                                       Margin="0,3,0,0"/>

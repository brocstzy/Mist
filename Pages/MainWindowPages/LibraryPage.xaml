                                        <SolidColorBrush Color="Gray"
                                                         Opacity="0.8"/>
                                    </Separator.Background>
                                </Separator>
                                <Label Name="reviewWrite_Label"
                                   Content="Напишите отзыв для игры"
                                   FontSize="20"
                                   Foreground="#66c0f4"/>
                                <TextBlock Text="Напишите, что вам понравилось или не понравилось об этой игре и рекомендуете ли вы её другим людям." 
                                           Margin="5,0,0,0"
                                           FontSize="16"
                                           TextWrapping="Wrap"/>
                                <TextBlock Text="Будьте уважительны и следуйте нашим правилам и условиям использования." 
                                           Margin="5,0,0,0"
                                           FontSize="16"
                                           TextWrapping="Wrap"/>
                                <Grid Margin="0,15,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition Width="1*" />
                                    </Grid.ColumnDefinitions>
                                    <Border BorderBrush="#53a3c3" BorderThickness="2"
                                        VerticalAlignment="Top">
                                        <Image x:Name="pfp_Image"
                                           Width="100"
                                           Height="100"/>
                                    </Border>
                                    <Grid Grid.Column="1"
                                      Margin="15,0,0,0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="1*" />
                                            <RowDefinition Height="1*" />
                                        </Grid.RowDefinitions>
                                        <TextBox x:Name="reviewText_TextBox"
                                               Grid.Row="0"
                                             Height="175"
                                                 Padding="5,10,5,5"
                                                 Background="#222b35"
                                                 Foreground="White"
                                                 FontFamily="{StaticResource font_regular}"
                                                 FontSize="16"
                                                 TextWrapping="Wrap"
                                                 MaxLength="2500"/>
                                        <Grid Grid.Row="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*" />
                                                <ColumnDefinition Width="auto" />
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Orientation="Vertical">
                                                <Label Content="Вы рекомендуете эту игру?"
                                                       FontSize="14"
                                                       Padding="0,5,5,5"/>
                                                <StackPanel Orientation="Horizontal">
                                                    <Button Style="{DynamicResource ButtonStyle4}" x:Name="recommend_Button"
                                                            Padding="15,5"
                                                            Width="90"
                                                            Click="recommend_Button_Click">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="1*" />
                                                                <ColumnDefinition Width="1*" />
                                                            </Grid.ColumnDefinitions>
                                                            <Image Source="/Assets/thumbs-up.png"
                               Width="32"
                                                                   x:Name="thumbsUp_Image"/>
                                                            <Image Source="/Assets/check.png"
                               Width="32"
                               Visibility="Collapsed"
                               x:Name="checkYes_Image"/>
                                                            <TextBlock Text="Да"
                                                                       HorizontalAlignment="Center"
                                                                       VerticalAlignment="Center"
                                                                       Grid.Column="1"
                                                                       Foreground="#67c1f5"
                                                                       FontSize="16"
                                                                       FontFamily="{StaticResource font_regular}"
                                                                       Margin="5,0,0,0"/>
                                                        </Grid>
                                                    </Button>
                                                    <Button Style="{DynamicResource ButtonStyle5}" x:Name="notRecommend_Button"
                                                            Margin="15,0,0,0"
                                                            Padding="15,5"
                                                            Width="90"
                                                            Click="notRecommend_Button_Click">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="1*" />
                                                                <ColumnDefinition Width="1*" />
                                                            </Grid.ColumnDefinitions>
                                                            <Image Source="/Assets/thumbs-down.png"
                               Width="32"
                               Opacity="1"
                                                                   x:Name="thumbsDown_Image"/>
                                                            <Image x:Name="checkNo_Image"
                               Source="/Assets/check.png"
                               Width="32"
                               Visibility="Collapsed"/>
                                                            <TextBlock Text="Нет"
                                                                       HorizontalAlignment="Center"
                                                                       VerticalAlignment="Center"
                                                                       Grid.Column="1"
                                                                       Foreground="#67c1f5"
                                                                       FontSize="16"
                                                                       FontFamily="{StaticResource font_regular}"
                                                                       Margin="5,0,0,0"/>
                                                        </Grid>
                                                    </Button>
                                                </StackPanel>
                                            </StackPanel>
                                        </Grid>
                                        <Button Style="{DynamicResource ButtonStyle6}" x:Name="postReview_Button"
                                            Content="Оставить отзыв"
                                            Grid.Row="1"
                                            HorizontalAlignment="Right"
                                                VerticalAlignment="Bottom"
                                                Padding="10,10"/>
                                    </Grid>
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Orientation="Vertical"
                                    Grid.Column="1"
                                    MinWidth="300">
                            <StackPanel.Background>
                                <SolidColorBrush Color="#474747"
                                                 Opacity="0.7"/>
                            </StackPanel.Background>
                            <StackPanel Margin="20,10,20,20">
                                <TextBlock x:Name="friendsWhoHave_Label"
                                   Text="Друзья, у которых есть игра"
                                   FontFamily="{StaticResource font_light}"
                                   FontSize="18 "
                                           TextWrapping="Wrap"
                                           Padding="5,5,0,10"
                                           Foreground="White"/>
                                <StackPanel Orientation="Vertical">
                                    <StackPanel.Background>
                                        <SolidColorBrush Color="Gray" />
                                    </StackPanel.Background>
                                    <StackPanel Orientation="Vertical">
                                        <ListBox x:Name="friendsWhoPlay_ListBox" />
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>

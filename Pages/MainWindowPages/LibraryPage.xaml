                            <StackPanel Orientation="Vertical"
                                        Grid.Column="2"
                                        Margin="25,0,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <Label Content="Разработчик:" />
                                    <Label x:Name="developerName_Label" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Label Content="Дата выпуска:" />
                                    <Label x:Name="releaseDate_Label" />
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Grid>
                    <StackPanel Orientation="Horizontal"
                                
                                Margin="0,20,0,0">
                        <StackPanel.Background>
                            <SolidColorBrush Color="DarkGray"
                                             Opacity="0.2"/>
                        </StackPanel.Background>
                        <Button Style="{DynamicResource ButtonStyle3}" x:Name="storePage_Button"
                                Content="Страница в магазине"
                                Margin="10"
                                Padding="15,5"
                                    BorderThickness="0"
                                Background="Transparent"
                                FontSize="16"
                                Click="storePage_Button_Click"
                                />
                    </StackPanel>
                    <Grid Margin="0,15,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.9*" />
                            <ColumnDefinition Width="1.1*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Vertical"
                                    Margin="0,0,20,0">
                            <StackPanel.Background>
                                <LinearGradientBrush StartPoint="0,0"
                                                     EndPoint="1,1"
                                                     Opacity="0.7">
                                    <GradientStop Color="#323c48" Offset="0"/>
                                    <GradientStop Color="#576674" Offset="1"/>
                                </LinearGradientBrush>

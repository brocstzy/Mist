                                       Content="0.0 часов"
                                       Margin="0,0,0,3"
                                       Opacity="0.7"/>
                            </StackPanel>
                        </Grid>
                        <Button Style="{DynamicResource ButtonStyle2}" x:Name="info_Button"
                                Click="info_Button_Click"
                                Grid.Column="3"
                                HorizontalAlignment="Right"
                                Height="32"
                                BorderThickness="0">
                            <Button.Background>
                                <SolidColorBrush Color="#d6d6d6"
                                                 Opacity="0.3"/>
                            </Button.Background>
                        </Button>
                    </Grid>
                    <Grid x:Name="info_Grid"
                          Visibility="Collapsed"
                          Margin="0,10,0,0">
                        <Grid.Background>
                            <SolidColorBrush Color="Black"
                                             Opacity="0.5"/>
                        </Grid.Background>
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>
                            <Image x:Name="verticalInfo_Image"
                                   Width="100"
                                   HorizontalAlignment="Left"/>
